generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

enum GameMode {
  CUSTOM
  AUTO
}

enum Status {
  NOT_STARTED
  INPROGRESS
  FINISHED
}

model Tournament {
  id        Int      @id @default(autoincrement())
  winner    Int?
  mode      GameMode
  size      Int
  status    Status   @default(INPROGRESS)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  players Player[]
  matches Match[]

  @@map("tournament")
}

model Player {
  id           Int      @id @default(autoincrement())
  tournamentId Int      @map("tournament_id")
  userId       Int      @map("user_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  tournament Tournament @relation(fields: [tournamentId], references: [id])

  @@map("player")
}

model Match {
  id           Int    @id @default(autoincrement())
  player1Id    Int?
  player2Id    Int?
  player1Score Int?   @default(0) @map("player_1_score")
  player2Score Int?   @default(0) @map("player_2_score")
  winner       Int?
  round        Int
  status       Status @default(NOT_STARTED)

  nextMatchId     Int?    @map("next_match_id")
  nextMatch       Match?  @relation("NextMatch", fields: [nextMatchId], references: [id])
  previousMatches Match[] @relation("NextMatch")

  tournamentId Int        @map("tournament_id")
  tournament   Tournament @relation(fields: [tournamentId], references: [id])

  @@map("match")
}
