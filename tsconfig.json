{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types",
      "@types",
      "src/types",
      "src/v1/types"
    ]
  },
  "include": [
    "src/**/*.*",
    "@types/**/*.d.ts",
    "src/v1/types/**/*.d.ts",
    "src/types/**/*.d.ts"
  ]
}
